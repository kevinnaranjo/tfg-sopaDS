{% extends 'base/base.html.twig' %}

{% block body %}

    <span id="notificacion"></span>
    <form action="" class="ml-5 ulpgcds-form" method="post" onsubmit="return validar()">
        <div class="ulpgcds-form__item">
            <label for="input-id"><button class="ulpgcds-tooltip" data-simpletooltip-text="Texto de prueba en tooltip" role="tooltip">Ayuda<span class="ulpgcds-icon ulpgcds-icon-alert ulpgcds-icon--right"></span></button></label>
            <input type="text" id="input-id" />
        </div>

        <div class="ulpgcds-form__item">
            <label for="text-input-id-1">Nombre</label>
            <input id="text-input-id-1" name="text-input" placeholder="Nombre" required="required" type="text"/>
            <div id="helptext-1" class="help-text">Introduzca su nombre</div>
        </div>

        <div class="ulpgcds-form__item">
            <label for="text-input-id-2">Etiqueta (optional)</label>
            <input id="text-input-id-2" name="text-input" placeholder="Ejemplo" type="password" />
            <div class="help-text">Esto es un texto de ayuda</div>
        </div>

        <div class="ulpgcds-form__item ulpgcds-form__item--type-numeric">
            <label for="number-input">Edad:</label>
            <input id="number-input" max="130" min="0" step="1" type="number" value="0" />
        </div>

        <div class="ulpgcds-form__item">
            <label for="fecha-datepicker-2">Fecha de nacimiento</label>
            <input autocomplete="off" class="ulpgcds-datepicker ulpgcds-form__item--icon" id="fecha-datepicker-2" name="fecha" type="text" value="" placeholder="dd/mm/aaaa" />
            <span class="ulpgcds-icon-calendar"></span>
        </div>

        <input class="ulpgcds-btn ulpgcds-btn--primary" type="submit" value="Enviar" />
    </form>

    <footer>
        <div class="ulpgcds-footer">
            <div class="ulpgcds-footer__top wrapper float-left mb-3">
                <div class="row mx-auto">
                    <div class="col-6">
                        <div class="footer-logo">
                            <a href="/"><img src="assets/img/sopaxx.gif" alt="[S.Op.]" align="bottom" border="0"></a>
                            <a class="m-1 align-bottom" href="/design">Portada</a>
                            <p class="copyright p-2">&copy; 1994-2020 Universidad de Las Palmas de Gran Canaria</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ulpgcds-footer__bottom">
                <div class="wrapper">
                    <p>© Universidad de Las Palmas de Gran Canaria · ULPGC</p>
                </div>
            </div>
        </div>
    </footer>

{% endblock %}

{% block title %}
    ULPGC · Formularios
{% endblock %}

{% block js %}
    <script type="text/javascript">function validar() {
            var text = document.getElementById("text-input-id-1").value;
            if (text.length > 10 ) {
                /*document.getElementById('text-input-id-1').value = '';*/
                document.getElementById('text-input-id-1').className = "ulpgcds-form__item__error";
                document.getElementById('helptext-1').innerText = "El texto no puede contener más de 10 caracteres";
                document.getElementById('notificacion').innerHTML='<div role="alert" class="w-50 mx-auto mt-5 ulpgcds-messages ulpgcds-messages--error">Debe rellenar los campos correctamente</div>' +
                    '<div role="alert" class="w-50 mx-auto mt-5 ulpgcds-messages ulpgcds-messages--warning">Debe rellenar los campos correctamente</div>';
                return false;
            }
            document.getElementById('notificacion').innerHTML='<div role="alert" class="w-50 mx-auto mt-5 ulpgcds-messages ulpgcds-messages--status">Éxito al rellenar el formulario</div>';
            return true;
        }

        $('.ulpgcds-tabs li').click(function(){
            var tab_id = $(this).attr('href');

            $(this).parent().find("li").removeClass('active');
            $('.tab-content').removeClass('active');

            $(this).addClass('active');
            if ($(tab_id))
                $(tab_id).addClass('active');
        });
    </script>
    <script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
    </script>
    <script type="text/javascript">
        _uacct = "UA-1660551-1";
        urchinTracker();
    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.ulpgc.es/ulpgcds/1.0/js/ulpgcds.js?v=1.0"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a5b87c29a1.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js"></script>
    <link href="https://cdn.ulpgc.es/ulpgcds/1.0/js/chosen/chosen.css" media="all" rel="stylesheet" />
    <script src="https://cdn.ulpgc.es/ulpgcds/1.0/js/chosen/chosen.jquery.js"></script>
    <script src="https://cdn.ulpgc.es/ulpgcds/1.0/js/jquery.ui/datepicker.js"></script>
{% endblock %}